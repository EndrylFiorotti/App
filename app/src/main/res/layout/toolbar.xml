<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:navigationIcon="@drawable/ic_navigation_icon"
    android:focusable="true">

    <Button
        android:id="@+id/button_previous"
        android:layout_width="@dimen/button_toolbar_width"
        android:layout_height="@dimen/button_toolbar_height"
        android:text="@string/toolbar_button_previous"
        android:visibility="visible"
        android:background="@drawable/button_toolbar"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/button_next"
        android:layout_width="@dimen/button_toolbar_width"
        android:layout_height="@dimen/button_toolbar_height"
        android:layout_marginStart="30dp"
        android:text="@string/toolbar_button_next"
        android:visibility="visible"
        android:background="@drawable/button_toolbar"
        android:layout_gravity="center_horizontal"/>

</androidx.appcompat.widget.Toolbar>